{
  "name": "tuto-turbo-repo",
  "private": true,
  "scripts": {
    "build": "turbo build --concurrency=30",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "pipeline": "turbo pipeline",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "lerna:version": "lerna version -y",
    "lerna:publish": "lerna publish from-package -y",
    "lerna:all": "lerna version --yes && lerna publish from-package --yes"
  },
  "devDependencies": {
    "lerna": "^8.1.8",
    "prettier": "^3.2.5",
    "turbo": "^2.1.3",
    "typescript": "^5.4.5",
    "ze-package": "*"

  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {}
}
